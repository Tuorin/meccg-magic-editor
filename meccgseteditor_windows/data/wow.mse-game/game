	type: symbol
	name: symbol
	description: The symbol for this set, double click to edit
set field:
	type: image
	name: image
	description: An optional image you can import to use as the symbol for the set
set field:
	type: boolean
	name: use image
	description: Should an imported image be used as the symbol for the set?
	initial: no
set field:
	type: boolean
	name: mark errors
	description: Marks errors on cards, for example wording and spelling errors, non unique card names, etc.
############################# Default style
default set style:
	title:
		padding left: 2
		font:
			size: 16
	symbol:
		max aspect ratio: 2.5
		variation:
			name: common
			border radius: 0.10
			fill type: solid
			fill color: white
			border color: black
		variation:
			name: uncommon
			border radius: 0.10
			fill type: solid
			fill color: rgb(48,103,61) #green
			border color: white
		variation:
			name: rare
			border radius: 0.10
			fill type: solid
			fill color: rgb(28,61,115) #blue
			border color: white
		variation:
			name: epic
			border radius: 0.10
			fill type: solid
			fill color: rgb(67,98,145) #purple
			border color: white
		variation:
			name: legendary
			border radius: 0.10
			fill type: solid
			fill color: rgb(180,109,65) #orange
			border color: white
