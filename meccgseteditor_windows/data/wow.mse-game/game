############################################################## Automatic Text Replacements
auto replace:
	match: (C)
	replace: ©
auto replace:
	match: CR
	replace: ©
auto replace:
	match: TM
	replace: ™
	whole word: false
auto replace:
	match: --
	replace: —
auto replace:
	match: ~
	replace: CARDNAME
auto replace:
	match: >>>
	replace: ->
