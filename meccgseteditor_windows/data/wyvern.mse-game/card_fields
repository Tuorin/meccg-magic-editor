############################# Fields
card field:
	type: text
	name: cardnumber
	card list visible: true
	card list column: 1
	card list width: 10
	card list name: Num
	identifying: true
	show statistics: false
	description: Card set number
	
	
card field:
	type: text
	name: name
	card list visible: true
	card list column: 2
	card list width: 100
	identifying: true
	show statistics: false
	#multi line: true
	description: Name of the card
	card list name:Card Name
	script: to_upper(value)


